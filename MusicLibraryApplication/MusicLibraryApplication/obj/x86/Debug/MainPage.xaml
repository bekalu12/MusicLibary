<Page x:ConnectionId='1'
    x:Class="MusicLibraryApplication.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicLibraryApplication"
    xmlns:data="using:MusicLibraryApplication.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <RelativePanel Grid.Row="0" Background="White" >
            <Image x:ConnectionId='20' Name="Logo"
                   Source="/Assets/Images/logo.png"
                   MaxHeight="45"
                   Margin="0 0 500 0"
                   RelativePanel.AlignLeftWithPanel="True"/>
            <TextBlock x:ConnectionId='21' Text="Categories" 
                       Name="CategoryListText"
                       HorizontalTextAlignment="Center"
                       Width="150"
                       FontSize="20"
                       FontFamily="Calibri"
                       Foreground="DarkBlue"
                       RelativePanel.AlignRightWithPanel="True"
                       Margin="0,10,10,0">
            </TextBlock>
            <Button x:ConnectionId='22' Name="MyCollectio" 
                    RelativePanel.LeftOf="BackButton"                   
                    Height="45"
                    Width="150"
                    FontSize="15"
                    FontFamily="Calibri"
                    Foreground="DarkBlue"
                    Content="Create Collection"
                                             />
            <Button x:ConnectionId='23' Name="BackButton" 
                    RelativePanel.LeftOf="CategoryListText"
                    FontFamily="Segoe MDL2 Assets"
                    Height="45"
                    Width="45"
                    Content="&#xE0AD;"
                    Foreground="DarkBlue"
                                            />
        </RelativePanel>

        <Grid Grid.Row ="1"  
              Margin="10" 
              Padding="0">

            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="600"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>

                <MediaElement x:ConnectionId='8' Name="MusicMedia" 
                              AutoPlay="True" />
                
                <GridView x:ConnectionId='9' Grid.Row="0" 
                          Background="White"
                          Name="ListOfMusic" 
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                                                       
                                                           
                          HorizontalAlignment="Left">
                    
                    <GridView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='16' Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="0" >
                                <Image x:ConnectionId='17' Name="MusicImage" 
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Height="40"
                                       Width="40" 
                                                                   />
                                <TextBlock x:ConnectionId='18'                           
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="18"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           Margin="0 10 10 10"/>
                                <CheckBox Name="CheckBox"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Width="10" Height="10">
                                    <!-- Click="CheckBox_Click" Checked="CheckBox_Click" -->


                                </CheckBox>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <GridView x:ConnectionId='10' Grid.Row="1"
                          Name="MyCollection"
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                                                       
                                                            >
                    <GridView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='12' Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Stretch"
                                        Margin="0,10,0,10" >
                                <Image x:ConnectionId='13' Name="MusicImage"
                                       Height="60" 
                                       Width="60"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                                                  />
                                <TextBlock x:ConnectionId='14'                           
                                           FontSize="18"
                                           FontFamily="Calibri"
                                           Foreground="DarkCyan"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="10,10,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>

            <RelativePanel x:ConnectionId='2' Name="ListCategory"
                           Grid.Column="1" 
                           Background="White"
                           Visibility="Visible">
                <ListView x:ConnectionId='3' Name="CategoryList"
                          IsItemClickEnabled="True"
                                                          
                                                            
                          RelativePanel.AlignHorizontalCenterWithPanel="True">
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='5' Margin="10"
                                        HorizontalAlignment="Center">
                                <Image x:ConnectionId='6'                        
                                       Height="45"
                                       Width="45"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="0"/>
                                <TextBlock x:ConnectionId='7'                               
                                           FontSize="18"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Margin="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RelativePanel>
        </Grid>
    </Grid>   
</Page>

