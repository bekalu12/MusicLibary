<Page x:ConnectionId='1'
    x:Class="MusicLibraryApplication.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicLibraryApplication"
    xmlns:data="using:MusicLibraryApplication.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0" Background="White" >
            <Image x:ConnectionId='27' Name="Logo"
                   Source="/Assets/Images/logo.png"
                   MaxHeight="45"
                   Margin="0 0 500 0"
                   RelativePanel.AlignLeftWithPanel="True"/>

            

            <Button x:ConnectionId='28' Name="MyCollectio" 
                    RelativePanel.LeftOf="SearchBy"                   
                    Height="45"
                    Width="150"
                    FontSize="15"
                    FontFamily="Calibri"
                    Foreground="DarkBlue"
                    Background="Transparent"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Content="Create Collection"
                                             >
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>

            <TextBlock x:ConnectionId='29' Name="SearchBy"
                       Text="Search By:"
                       HorizontalTextAlignment="Center"
                       Width="100"
                       FontSize="20"
                       FontFamily="Calibri"
                       FontWeight="Bold"
                       Foreground="DarkBlue"
                       RelativePanel.LeftOf="ByGenre"
                       Margin="0,10,0,0">

            </TextBlock>

            <Button x:ConnectionId='30' Name="ByGenre" 
                    RelativePanel.LeftOf="ByArtist"                   
                    Height="45"
                    Width="80"
                    FontSize="15"
                    FontFamily="Calibri"
                    Foreground="DarkBlue"
                    Background="Transparent"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Content="Genre"
                                             >
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>

            <Button x:ConnectionId='31' Name="ByArtist" 
                    RelativePanel.LeftOf="ByDecade"                   
                    Height="45"
                    Width="80"
                    FontSize="15"
                    FontFamily="Calibri"
                    Foreground="DarkBlue"
                    Background="Transparent"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Content="Artist"
                                             >
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>

            <Button x:ConnectionId='32' Name="ByDecade" 
                    RelativePanel.LeftOf="BackButton"                   
                    Height="45"
                    Width="80"
                    FontSize="15"
                    FontFamily="Calibri"
                    Foreground="DarkBlue"
                    Background="Transparent"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Content="Decade"
                                             >
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>

            <Button x:ConnectionId='33' Name="BackButton" 
                    RelativePanel.LeftOf="HamButton"
                    FontFamily="Segoe MDL2 Assets"
                    Height="45"
                    Width="45"
                    Content="&#xE0AD;"
                    Foreground="DarkBlue"
                    Background="White"
                    BorderThickness="0"
                                            >
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>

            <Button x:ConnectionId='34' Name="HamButton" 
                    RelativePanel.AlignRightWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    Height="45"
                    Width="45"
                    Content="&#xE700;"
                    Foreground="DarkBlue"
                    Background="White"
                    BorderThickness="0"
                                           >
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="LightSeaGreen"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="White"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
        </RelativePanel>

        <Grid Grid.Row ="1"  
              Margin="10 10 0 10" 
              Padding="0">

            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <MediaElement x:ConnectionId='8' Name="MusicMedia" 
                              AutoPlay="True" />

                <GridView x:ConnectionId='9' Grid.Row="0" 
                          Background="White"
                          Name="ListOfMusic" 
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                                                       
                                                           
                          HorizontalAlignment="Left">

                    <GridView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='23' Orientation="Vertical"
                                        Height="90"
                                        Width="90"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="10" >
                                <Image x:ConnectionId='24' Name="MusicImage" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Height="40"
                                       Width="40" 
                                                                   />
                                <TextBlock x:ConnectionId='25'                           
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           FontWeight="Bold"
                                           TextWrapping="WrapWholeWords"
                                           TextAlignment="Center"
                                           Margin="0"/>
                                <TextBlock x:ConnectionId='26'                            
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="11"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           TextWrapping="WrapWholeWords"
                                           Margin="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <TextBlock Text="My Music"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="20"
                           Margin="0,10,0,0"
                           FontWeight="Bold"
                           FontFamily="Calibri"
                           Foreground="DarkBlue" Grid.Row="2"/>

                <GridView x:ConnectionId='10' Grid.Row="2"
                          Name="MyCollection"
                          Margin="0 30 0 0"
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                                                              
                                                            >
                    <GridView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='18' Orientation="Vertical"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Height="90"
                                        Width="90"
                                        Margin="10" >
                                <Image x:ConnectionId='19' Name="MusicImage" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Height="40"
                                       Width="40" 
                                                                   />
                                <TextBlock x:ConnectionId='20'                           
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           FontWeight="Bold"
                                           TextWrapping="WrapWholeWords"
                                           TextAlignment="Center"
                                           Margin="0"/>
                                <TextBlock x:ConnectionId='21'                            
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="11"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           TextWrapping="WrapWholeWords"
                                           Margin="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
                <GridView x:ConnectionId='11' Grid.Row="3"
                          Name="PlayArea"
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                           HorizontalAlignment="Center">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>

                        </Grid.RowDefinitions>
                        <GridView Grid.Row="0">
                            <TextBlock x:ConnectionId='16'  x:Name="SongPlayingText"></TextBlock>
                        </GridView>
                        <GridView Grid.Row="1">
                            <Button x:ConnectionId='12' x:Name="buttonBackward" Content="Back"                          Height="50" Width="50"></Button>
                            <Button x:ConnectionId='13' x:Name="buttonPlay" Content="Play"                          Height="50" Width="50"></Button>
                            <Button x:ConnectionId='14' x:Name="buttonStop" Content="Stop"                          Height="50" Width="50"></Button>
                            <Button x:ConnectionId='15' x:Name="buttonForward" Content="Next"                          Height="50" Width="50"></Button>
                        </GridView>
                    </Grid>
                </GridView>
            </Grid>
            <RelativePanel x:ConnectionId='2' Name="ListCategory"
                           Grid.Column="1" 
                           Background="White"
                           Visibility="Visible">
                <ListView x:ConnectionId='3' Name="CategoryList"
                          IsItemClickEnabled="True"
                                                          
                                                            
                          RelativePanel.AlignHorizontalCenterWithPanel="True"
                          RelativePanel.AlignRightWithPanel="True">
                    <ListView.Resources>
                        <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="WhiteSmoke" />
                        <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="WhiteSmoke" />
                        <SolidColorBrush x:Key="ListViewItemBackgroundPointerOver" Color="WhiteSmoke" />
                        <SolidColorBrush x:Key="ListViewItemBackgroundPressed" Color="WhiteSmoke" />
                        <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="WhiteSmoke" />
                    </ListView.Resources>
                    <ListView.ItemTemplate>
                        <DataTemplate                            >
                            <StackPanel x:ConnectionId='5' Margin="10"
                                        HorizontalAlignment="Center" FocusVisualPrimaryBrush="{x:Null}">
                                <Image x:ConnectionId='6'                        
                                       Height="45"
                                       Width="45"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="0"/>
                                <TextBlock x:ConnectionId='7'                               
                                           FontSize="18"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Margin="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RelativePanel>
        </Grid>
    </Grid>
</Page>

