<Page x:ConnectionId='1'
    x:Class="MusicLibraryApplication.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicLibraryApplication"
    xmlns:data="using:MusicLibraryApplication.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0" Background="White" >
            <Image x:ConnectionId='21' Name="Logo"
                   Source="/Assets/Images/logo.png"
                   MaxHeight="45"
                   Margin="0 0 500 0"
                   RelativePanel.AlignLeftWithPanel="True"/>
            <TextBlock x:ConnectionId='22' Name="CategoryListText"
                       Text="Categories"
                       HorizontalTextAlignment="Center"
                       Width="150"
                       FontSize="20"
                       FontFamily="Calibri"
                       FontWeight="Bold"
                       Foreground="DarkBlue"
                       RelativePanel.AlignRightWithPanel="True"
                       Margin="0,10,10,0">
            </TextBlock>
            <Button x:ConnectionId='23' Name="MyCollectio" 
                    RelativePanel.LeftOf="BackButton"                   
                    Height="45"
                    Width="150"
                    FontSize="15"
                    FontFamily="Calibri"
                    Foreground="DarkBlue"
                    Background="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Content="Create Collection"
                                             >
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>

            <Button x:ConnectionId='24' Name="BackButton" 
                    RelativePanel.LeftOf="CategoryListText"
                    FontFamily="Segoe MDL2 Assets"
                    Height="45"
                    Width="45"
                    Content="&#xE0AD;"
                    Foreground="DarkBlue"
                    Background="White"
                    BorderThickness="0"
                                            >
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="DarkCyan"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
        </RelativePanel>

        <Grid Grid.Row ="1"  
              Margin="10" 
              Padding="0">

            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>

                <MediaElement x:ConnectionId='8' Name="MusicMedia" 
                              AutoPlay="True" />

                <GridView x:ConnectionId='9' Grid.Row="0" 
                          Background="White"
                          Name="ListOfMusic" 
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                                                       
                                                           
                          HorizontalAlignment="Left">

                    <GridView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='17' Orientation="Vertical"
                                        Height="90"
                                        Width="90"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="10" >
                                <Image x:ConnectionId='18' Name="MusicImage" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Height="40"
                                       Width="40" 
                                                                   />
                                <TextBlock x:ConnectionId='19'                           
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           FontWeight="Bold"
                                           TextWrapping="WrapWholeWords"
                                           TextAlignment="Center"
                                           Margin="0"/>
                                <TextBlock x:ConnectionId='20'                            
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="11"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           TextWrapping="WrapWholeWords"
                                           Margin="0"/>
                                
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <TextBlock Text="My Music"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="20"
                           Margin="0,10,0,0"
                           FontWeight="Bold"
                           FontFamily="Calibri"
                           Foreground="DarkBlue" Grid.Row="2"/>

                <GridView x:ConnectionId='10' Grid.Row="2"
                          Name="MyCollection"
                          Margin="0 30 0 0"
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                                                              
                                                            >
                    <GridView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='12' Orientation="Vertical"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Height="90"
                                        Width="90"
                                        Margin="10" >
                                <Image x:ConnectionId='13' Name="MusicImage" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Height="40"
                                       Width="40" 
                                                                   />
                                <TextBlock x:ConnectionId='14'                           
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           FontWeight="Bold"
                                           TextWrapping="WrapWholeWords"
                                           TextAlignment="Center"
                                           Margin="0"/>
                                <TextBlock x:ConnectionId='15'                            
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="11"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           TextWrapping="WrapWholeWords"
                                           Margin="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>

            <RelativePanel x:ConnectionId='2' Name="ListCategory"
                           Grid.Column="1" 
                           Background="White"
                           Visibility="Visible">
                <ListView x:ConnectionId='3' Name="CategoryList"
                          IsItemClickEnabled="True"
                                                          
                                                            
                          RelativePanel.AlignHorizontalCenterWithPanel="True">
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='5' Margin="10"
                                        HorizontalAlignment="Center">
                                <Image x:ConnectionId='6'                        
                                       Height="45"
                                       Width="45"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="0"/>
                                <TextBlock x:ConnectionId='7'                               
                                           FontSize="18"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Margin="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RelativePanel>
        </Grid>
    </Grid>
</Page>

