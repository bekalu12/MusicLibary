<Page
    x:Class="MusicLibraryApplication.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicLibraryApplication"
    xmlns:data="using:MusicLibraryApplication.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <RelativePanel Grid.Row="0" Background="White" >
            <Image Name="Logo"
                   Source="/Assets/Images/logo.png"
                   MaxHeight="45"
                   Margin="0 0 500 0"
                   RelativePanel.AlignLeftWithPanel="True"/>
            <TextBlock Text="Categories" 
                       Name="CategoryListText"
                       HorizontalTextAlignment="Center"
                       Width="150"
                       FontSize="20"
                       FontFamily="Calibri"
                       Foreground="DarkBlue"
                       RelativePanel.AlignRightWithPanel="True"
                       Margin="0,10,10,0">
            </TextBlock>
            <Button Name="MyCollectio" 
                    RelativePanel.LeftOf="BackButton"                   
                    Height="45"
                    Width="150"
                    FontSize="15"
                    FontFamily="Calibri"
                    Foreground="DarkBlue"
                    Content="Create Collection"
                    Click="MyCollectio_Click"/>
            <Button Name="BackButton" 
                    RelativePanel.LeftOf="CategoryListText"
                    FontFamily="Segoe MDL2 Assets"
                    Height="45"
                    Width="45"
                    Content="&#xE0AD;"
                    Foreground="DarkBlue"
                    Click="BackButton_Click"/>
        </RelativePanel>

        <Grid Grid.Row ="1"  
              Margin="10" 
              Padding="0">

            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="600"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>

                <MediaElement Name="MusicMedia" 
                              AutoPlay="True" />
                
                <GridView Grid.Row="0" 
                          Background="White"
                          Name="ListOfMusic" 
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                          ItemsSource="{x:Bind Musics}"
                          ItemClick="ListOfMusic_ItemClick"
                          HorizontalAlignment="Left">
                    
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="data:SongItem">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="0" >
                                <Image Name="MusicImage" 
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Height="40"
                                       Width="40" 
                                       Source="{x:Bind ImageFile}" />
                                <TextBlock Text="{x:Bind SongTitle}" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="18"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           Margin="0 10 10 10"/>
                                <CheckBox Name="CheckBox"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Width="10" Height="10"
                                          Click="CheckBox_Click" 
                                          Checked="CheckBox_Click" />



                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <GridView Grid.Row="1"
                          Name="MyCollection"
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                          ItemsSource="{x:Bind SelectedMusic}"
                          ItemClick="MyCollection_ItemClick">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="data:SongItem">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Stretch"
                                        Margin="0,10,0,10" >
                                <Image Name="MusicImage"
                                       Height="60" 
                                       Width="60"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Source="{x:Bind ImageFile}"/>
                                <TextBlock Text="{x:Bind ArtistName}"
                                           FontSize="18"
                                           FontFamily="Calibri"
                                           Foreground="DarkCyan"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="10,10,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>

            <RelativePanel Name="ListCategory"
                           Grid.Column="1" 
                           Background="White"
                           Visibility="Visible">
                <ListView Name="CategoryList"
                          IsItemClickEnabled="True"
                          ItemsSource="{x:Bind MenuItems}"
                          ItemClick="CategoryList_ItemClick"
                          RelativePanel.AlignHorizontalCenterWithPanel="True">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="data:MenuItem">
                            <StackPanel Margin="10"
                                        HorizontalAlignment="Center">
                                <Image Source="{x:Bind Icon}" 
                                       Height="45"
                                       Width="45"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="0"/>
                                <TextBlock Text="{x:Bind MenuSelection}" 
                                           FontSize="18"
                                           FontFamily="Calibri"
                                           Foreground="DarkBlue"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Margin="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RelativePanel>
        </Grid>
    </Grid>   
</Page>
